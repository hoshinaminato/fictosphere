
{
  "name": "fictosphere",
  "version": "1.0.2",
  "description": "一个高性能的关系可视化系统",
  "main": "electron/main.js",
  "author": "Gemini (AI Architect)",
  "contributors": [
    {
      "name": "User",
      "role": "Co-author & Creative Lead"
    }
  ],
  "license": "MIT",
  "scripts": {
    "web": "vite",
    "electron": "concurrently \"vite\" \"wait-on tcp:5174 && electron .\"",
    "dev": "concurrently \"vite\" \"wait-on tcp:5174 && electron .\"",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "d3": "^7.9.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.fictosphere.app",
    "productName": "Fictosphere",
    "copyright": "Copyright © 2024 Gemini & User",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.svg"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.svg"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Office"
    }
  }
}
